<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Vendor Ticket</title>
  <link rel="stylesheet" href="css/vendorTicket.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css">

  <%-include("partials/vendorBanner.ejs")-%>

  <div class="container-fluid">

    <form class="" action="/vendorTicket" method="post">
      <div class="ticketForm">
          <h1 class="display-1">Submit a Ticket</h1>
        <div class="form-group fields">
          <label for="exampleFormControlInput1">Pick a Nuisance</label>
          <select class="form-control" name="userEmail">
            <% orders.forEach((order) =>{ %>
              <option value="<%=order.userEmail%>"><%=order.userName%></option>
            <%});%>
          </select>
        </div>
        <div class="form-group fields">
          <label for="exampleFormControlInput1">Title</label>
          <input class="form-control" type="text" name="title" value="" placeholder="Peculiar fellow...">
        </div>
        <div class="form-group fields">
          <label for="textArea">Body</label>
          <textarea class="form-control"name="body" rows="8" cols="80" placeholder="What a most strange person who ordered from our establishment..."></textarea>
        </div>
        <button type="submit" class="submitBtn btn btn-lg btn-block btn-outline-primary" name="button">Submit</button>

      </div>
    </form>
  </div>

  </div>
  </body>

</html>
