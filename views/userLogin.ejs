<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>User Login</title>
    <link rel="stylesheet" href="css/userLogin.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css">


    <%-include("partials/loginBanner.ejs")-%>
    <div class="container-fluid login_register_container">
      <div class="row align-items-start login_register_form_box">
        <div class="col-6 corpoBox">
          <h1 class="corpSpeak1">Enjoy More Time</h1>
          <h1 class="corpSpeak2">With People You Love</h1>
        </div>
        <div class="col-2 userForm">
          <h3>Login</h3>
          <form action="/" method="post">
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Email address</label>
              <input type="email" name="userEmail" class="form-control" id="exampleFormControlEmail1" aria-describedby="emailHelp">
            </div>
            <div class="mb-3">
              <label for="exampleInputPassword1" class="form-label">Password</label>
              <input type="password" name = "userPassword" class="form-control" id="exampleInputPassword1">
            </div>
            <div class="mb-3 form-check">
            </div>
            <button type="submit" name="loginBtn" value="logging" class="btn btn-primary">Submit</button>
          </form>
        </div>
        <div class="col-2 registerForm">
          <h3>Register</h3>
          <form action="/" method="post">
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Email address</label>
              <input type="email" name="registerEmail" class="form-control" id="exampleFormControlEmail1" aria-describedby="emailHelp">
              <!-- <div id="emailHelp"  class="form-text">We'll never share your email with anyone else.</div> -->
            </div>
            <div class="mb-3">
              <label for="exampleInputPassword1" class="form-label">Password</label>
              <input type="password" name="registerPassword"class="form-control" id="exampleInputPassword1">
            </div>
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">First Name</label>
              <input type="text"  name="registerFirstName" class="form-control" placeholder="John">
            </div>
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Last Name</label>
              <input type="text" name="registerLastName" class="form-control" placeholder="Smith">
            </div>
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Street Address</label>
              <input type="text" name="registerAddress" class="form-control" placeholder="123 Street">
            </div>
            <button type="submit" name="registerBtn" value="register" class="btn btn-primary">Submit</button>
          </form>
        </div>
      </div>
    </div>

    <div id="login_register_status">
      <%=status%>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script>
    function message(){
      let status = JSON.parse(document.getElementById("login_register_status").innerHTML).status;
      console.log(status);
      if (status == "register-fail") alert("REGISTER FAILED: Pick a new email");
      else if (status == "register-success") alert("REGISTER SUCCESSFUL!");
      else if (status == "login-fail") alert("LOGIN FAILED: Incorrect Email/Password");
    }

    </script>

  </body>

  </html>
